<p id="notice"><%= notice %></p>

<h1>Network Hosts</h1>

<table>
  <thead>
    <tr>
      <th>Host name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @network_hosts.each do |network_host| %>
      <tr>
        <td><%= network_host.host_name %></td>
        <td><%= link_to 'Show', network_host %></td>
        <td><%= link_to 'Edit', edit_network_host_path(network_host) %></td>
        <td><%= link_to 'Destroy', network_host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Network Host', new_network_host_path %>
